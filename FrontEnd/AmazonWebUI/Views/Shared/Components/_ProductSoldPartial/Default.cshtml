@model List<OrderResultDto>
@{
    var Canada = 0;
    var Japan = 0;
    var Mex = 0;
    @foreach (var item in Model)
    {


        @if (item.Country.ToLower() == "kanada")
        {
            Canada = Canada + 1;
        }
        @if (item.Country.ToLower() == "japonya")
        {
            Japan = Japan + 1;
        }
        @if (item.Country.ToLower() == "meksika")
        {
            Mex = Mex + 1;
        }

    }
    <div class="col-lg-3 col-sm-6">
    <div class="card gradient-1">
        <div class="card-body">
            <h3 class="card-title text-white">Satılan Ürün</h3>
            <div class="d-inline-block">
                <h2 class="text-white">@Model.Count</h2>
                <ol>
                    <li>
                <p class="text-white mb-0">Kanada : @Canada</p>
                <p class="text-white mb-0">Japonya : @Japan</p>
                <p class="text-white mb-0">Meksika : @Mex</p>
                    </li>
                </ol>
            </div>
            <span class="float-right display-5 opacity-5"><i class="fa fa-shopping-cart"></i></span>
        </div>
    </div>

</div>
}