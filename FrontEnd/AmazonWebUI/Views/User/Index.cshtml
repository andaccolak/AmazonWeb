@model List<UserResultDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>İsim</th>
        <th>Soyisim</th>
        <th>Email</th>
        <th>Borç durumu</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var item in Model)
    {

        <tr>
            <th>@item.UserID</th>
            <td>@item.UserName</td>
            <td>@item.Surname</td>
            <td>@item.Email</td>
            <td>@item.BorcStatus</td>
            <td><a href="/User/UserDelete/@item.UserID" class="btn mb-1 btn-rounded btn-outline-danger">Sil</a></td>
            <td><a href="/User/UserUpdate/@item.UserID" class="btn mb-1 btn-rounded btn-outline-success">Güncelle</a></td>

            <td><a href="#" class="btn mb-1 btn-rounded btn-outline-dark">Detaylar</a></td>
        </tr>

    }
</table>

